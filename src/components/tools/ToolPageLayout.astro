---
export interface Props {
  title: string;
  description: string;
  features: Array<{
    icon: string;
    title: string;
    description: string;
    iconColor: string;
  }>;
}

const { title, description, features = [] } = Astro.props;
---

<main class="min-h-screen bg-gray-50 py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Page Header -->
    <div class="text-center mb-12">
      <h1 class="text-3xl font-bold text-gray-900 mb-4">
        {title}
      </h1>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        {description}
      </p>
    </div>

    <!-- Main Tool Section -->
    <div class="bg-white rounded-lg shadow-lg p-8 mb-8">
      <slot name="tool-content" />
    </div>

    <!-- Results Section -->
    <slot name="results" />

    <!-- Features Section -->
    <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8">
      {features.map((feature) => (
        <div class="text-center">
          <div class={`bg-${feature.iconColor}-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4`}>
            <svg class={`w-8 h-8 text-${feature.iconColor}-600`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={feature.icon}></path>
            </svg>
          </div>
          <h3 class="text-base font-semibold text-gray-900 mb-2">{feature.title}</h3>
          <p class="text-gray-600">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</main>

<slot name="scripts" />