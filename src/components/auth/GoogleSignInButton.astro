---
// Google登录按钮组件
export interface Props {
  redirectTo?: string;
  className?: string;
  size?: 'sm' | 'md' | 'lg';
  variant?: 'primary' | 'secondary';
}

const { 
  redirectTo = '/dashboard', 
  className = '', 
  size = 'md',
  variant = 'primary'
} = Astro.props;

// 根据size设置样式
const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-8 py-4 text-lg'
};

// 根据variant设置样式
const variantClasses = {
  primary: 'bg-white text-gray-700 border border-gray-300 hover:bg-gray-50',
  secondary: 'bg-blue-600 text-white hover:bg-blue-700'
};
---

<button
  id="google-signin-btn"
  type="button"
  class={`
    inline-flex items-center justify-center
    ${sizeClasses[size]}
    ${variantClasses[variant]}
    font-medium rounded-lg
    transition-all duration-200
    focus:outline-none
    disabled:opacity-50 disabled:cursor-not-allowed
    shadow-sm hover:shadow-md
    ${className}
  `}
  data-redirect-to={redirectTo}
>
  <!-- Google图标 -->
  <svg
    class="w-5 h-5 mr-2"
    viewBox="0 0 24 24"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      fill="#4285F4"
      d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
    ></path>
    <path
      fill="#34A853"
      d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
    ></path>
    <path
      fill="#FBBC05"
      d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
    ></path>
    <path
      fill="#EA4335"
      d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
    ></path>
  </svg>
  
  <!-- 按钮文本 -->
  <span id="btn-text">使用 Google 登录</span>
  
  <!-- 加载动画 -->
  <svg
    id="loading-spinner"
    class="hidden w-5 h-5 ml-2 animate-spin"
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
  >
    <circle
      class="opacity-25"
      cx="12"
      cy="12"
      r="10"
      stroke="currentColor"
      stroke-width="4"
    ></circle>
    <path
      class="opacity-75"
      fill="currentColor"
      d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
    ></path>
  </svg>
</button>

<script>
  import { signInWithGoogle } from '../../lib/auth';

  // 获取按钮元素
  const button = document.getElementById('google-signin-btn') as HTMLButtonElement | null;
  const btnText = document.getElementById('btn-text') as HTMLSpanElement | null;
  const loadingSpinner = document.getElementById('loading-spinner') as unknown as SVGSVGElement | null;

  if (button) {
    button.addEventListener('click', async () => {
      try {
        // 显示加载状态
        button.disabled = true;
        if (btnText) btnText.textContent = '登录中...';
        if (loadingSpinner) loadingSpinner.classList.remove('hidden');

        // 获取重定向URL
        const redirectTo = button.dataset.redirectTo || '/dashboard';

        // 执行Google登录
        await signInWithGoogle(redirectTo);
        
      } catch (error) {
        console.error('Google登录失败:', error);
        
        // 恢复按钮状态
        button.disabled = false;
        if (btnText) btnText.textContent = '使用 Google 登录';
        if (loadingSpinner) loadingSpinner.classList.add('hidden');
        
        // 显示错误提示
        alert('登录失败，请稍后重试');
      }
    });
  }
</script>

<style>
  /* 确保按钮在不同屏幕尺寸下的响应式表现 */
  @media (max-width: 640px) {
    #google-signin-btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>