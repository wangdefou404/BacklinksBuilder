---
import OptimizedImage from "../../layouts/utilities/OptimizedImage.astro";

const sections = [
  {
    title: "All backLink Building Tool",
    links: [
      { name: "Home", href: "/" },
      { name: "SubmitList", href: "/#section-two" },
      { name: "Backlink Generator", href: "/#section-three" },
      { name: "DR checker", href: "/#section-four" },
      { name: "Traffic checker", href: "/#section-five" },
    ],
  },
  {
    title: "Dynamic",
    links: [
      { name: "FAQ", href: "/#faq" },      
      { name: "Blog", href: "/blog" },

    ],
  },

  {
    title: "Terms & Privacy",
    links: [
      { name: "Terms", href: "/terms" },
      { name: "Privacy", href: "/privacy" },

    ],
  },
  {
    title: "Contact",
    links: [

      { name: "Mail Support", href: "/support" },

    ],
  },


];
---

<footer
  class="bg-gradient-to-br from-blue-50 via-white to-blue-100 border-base-200 mt-20">
  <div class="px-6 md:px-12 lg:px-24 py-20 max-w-7xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-16">
      <div class="md:col-span-1">
        <a href="/" class="inline-flex items-center gap-3">
          <OptimizedImage width={40} src="/logo.svg" alt="logo" />
          <span class="text-lg font-semibold text-black">BacklinksBuilder</span>
        </a>
        <p class="mt-4 text-sm text-gray-500">
          Analyze your competitors' websites quickly and for free to understand their backlinks, Domain Rating (DR), and website traffic.
        </p>
      </div>

      <div class="md:col-span-2">
        <h3 class="text-lg font-semibold text-black mb-2">
          Subscribe to our newsletter
        </h3>
        <p class="text-sm text-gray-500 mb-4">
          Join 1,000+ developers and get product updates, tips, and insights in
          your inbox.
        </p>
        <form class="flex flex-col sm:flex-row items-center gap-3 w-full">
          <input
            type="email"
            placeholder="Your email address"
            class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none"
          />
          <button
            type="submit"
            class="px-6 py-2 w-full md:w-auto rounded-md bg-blue-600 text-white hover:bg-blue-700 transition">
            Subscribe
          </button>
        </form>
      </div>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-sm text-gray-600">
      {
        sections.map(({ title, links }) => (
          <div>
            <h4 class="text-base font-semibold text-black mb-5">{title}</h4>
            <ul>
              {links.map(({ name, href }) => (
                <li class="first:prose-a:pt-0 last:prose-a:pb-0">
                  <a
                    href={href}
                    class="hover:text-blue-600 py-2 inline-block transition">
                    {name}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>

    <div
      class="pt-12 mt-12 border-t border-base-200 flex flex-col md:flex-row justify-between items-center text-xs text-gray-400">
      <p>
        &copy; {new Date().getFullYear()} BacklinksBuilder. Crafted by WangDefou Studio
        <a
          href="https://wangdefou.com"
          class="underline text-blue-600 hover:text-blue-800">
          WangDefou Studio
        </a>
      </p>
      <p>Additionally Development by WangDefou</p>
    </div>
  </div>
</footer>
