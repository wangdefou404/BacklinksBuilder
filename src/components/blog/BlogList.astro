---
import type { BlogPost } from '../../data/blog';
import BlogCard from './BlogCard.astro';

interface Props {
  posts: BlogPost[];
  title?: string;
  showTitle?: boolean;
}

const { posts, title = "Latest Blog Posts", showTitle = true } = Astro.props;
---

<section class="py-12 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    {showTitle && (
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl">
          {title}
        </h2>
        <p class="mt-4 text-lg text-gray-600 max-w-2xl mx-auto">
          Discover insights, tutorials, and best practices from our team of experts.
        </p>
      </div>
    )}
    
    {posts.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map(post => (
          <BlogCard post={post} />
        ))}
      </div>
    ) : (
      <div class="text-center py-12">
        <div class="mx-auto w-24 h-24 bg-gray-200 rounded-full flex items-center justify-center mb-4">
          <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No blog posts found</h3>
        <p class="text-gray-600">Check back later for new content!</p>
      </div>
    )}
  </div>
</section>