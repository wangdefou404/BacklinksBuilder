---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/global/Navigation.astro';
import Footer from '../components/global/Footer.astro';
---

<BaseLayout title="测试用户角色">
  <Navigation />
  
  <main class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-lg shadow p-6">
        <h1 class="text-2xl font-bold text-gray-900 mb-6">用户角色测试</h1>
        
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">测试邮箱:</label>
            <input 
              type="email" 
              id="email" 
              value="wangpangzier@gmail.com"
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
          </div>
          
          <button 
            id="checkRole" 
            class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            检查用户角色
          </button>
          
          <div id="result" class="mt-4 p-4 bg-gray-100 rounded-md hidden">
            <!-- 结果将显示在这里 -->
          </div>
        </div>
      </div>
    </div>
  </main>
  
  <Footer />
</BaseLayout>

<script>
  import { getCurrentUser } from '../lib/auth';
  
  document.getElementById('checkRole')?.addEventListener('click', async () => {
    const email = (document.getElementById('email') as HTMLInputElement)?.value;
    const resultDiv = document.getElementById('result');
    
    if (!email || !resultDiv) return;
    
    try {
      // 获取当前用户
      const user = await getCurrentUser();
      
      if (!user) {
        resultDiv.innerHTML = '<p class="text-red-600">请先登录</p>';
        resultDiv.classList.remove('hidden');
        return;
      }
      
      // 检查用户角色
      const response = await fetch(`/api/auth/get-user-role?userId=${user.id}`);
      const data = await response.json();
      
      if (response.ok) {
        resultDiv.innerHTML = `
          <div class="space-y-2">
            <p><strong>用户ID:</strong> ${data.userId}</p>
            <p><strong>邮箱:</strong> ${user.email}</p>
            <p><strong>角色:</strong> <span class="font-semibold ${data.role === 'admin' ? 'text-red-600' : 'text-blue-600'}">${data.role}</span></p>
            <p><strong>是否管理员:</strong> ${data.isAdmin ? '是' : '否'}</p>
            <p><strong>是否高级用户:</strong> ${data.isPremium ? '是' : '否'}</p>
            <p><strong>权限数量:</strong> ${data.permissions?.length || 0}</p>
          </div>
        `;
      } else {
        resultDiv.innerHTML = `<p class="text-red-600">错误: ${data.error}</p>`;
      }
      
      resultDiv.classList.remove('hidden');
      
    } catch (error) {
      console.error('检查角色失败:', error);
      if (resultDiv) {
        resultDiv.innerHTML = `<p class="text-red-600">检查失败: ${error}</p>`;
        resultDiv.classList.remove('hidden');
      }
    }
  });
</script>