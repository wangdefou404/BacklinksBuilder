    function formatFileSize(bytes) {
      if (bytes === 0) return '0 Bytes';
      const k = 1024;
      const sizes = ['Bytes', 'KB', 'MB', 'GB'];
      const i = Math.floor(Math.log(bytes) / Math.log(k));
      return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
    }
    
    function parseCSV(text) {
      const lines = text.split('\n').filter(line => line.trim());
      if (lines.length < 2) {
        throw new Error('CSVæ–‡ä»¶å¿…é¡»åŒ…å«æ ‡é¢˜è¡Œå’Œè‡³å°‘ä¸€è¡Œæ•°æ®');
      }
      
      const headers = lines[0].split(',').map(h => h.trim());
      const expectedHeaders = ['name', 'website_link', 'dr', 'traffic', 'payment_type', 'follow_type', 'platform_type', 'access_type', 'submit_url'];
      
      // æ£€æŸ¥å¿…éœ€çš„åˆ—
      const requiredHeaders = expectedHeaders.slice(0, 8); // é™¤äº†submit_urléƒ½æ˜¯å¿…éœ€çš„
      for (const header of requiredHeaders) {
        if (!headers.includes(header)) {
          throw new Error(`ç¼ºå°‘å¿…éœ€çš„åˆ—: ${header}`);
        }
      }
      
      const data = [];
      for (let i = 1; i < lines.length; i++) {
        const values = lines[i].split(',').map(v => v.trim());
        if (values.length < 8) continue; // è·³è¿‡ä¸å®Œæ•´çš„è¡Œ
        
        const row = {};
        headers.forEach((header, index) => {
          if (expectedHeaders.includes(header)) {
            row[header] = values[index] || '';
          }
        });
        
        // éªŒè¯æ•°æ®ç±»å‹
        if (row.dr) row.dr = parseInt(row.dr) || 0;
        if (row.traffic) row.traffic = parseInt(row.traffic) || 0;
        
        // éªŒè¯æšä¸¾å€¼
        if (row.payment_type && !['Free', 'Paid'].includes(row.payment_type)) {
          throw new Error(`ç¬¬${i+1}è¡Œ: payment_typeå¿…é¡»æ˜¯Freeæˆ–Paid`);
        }
        if (row.follow_type && !['DoFollow', 'NoFollow'].includes(row.follow_type)) {
          throw new Error(`ç¬¬${i+1}è¡Œ: follow_typeå¿…é¡»æ˜¯DoFollowæˆ–NoFollow`);
        }
        if (row.platform_type && !['blog', 'directory', 'content', 'comment', 'social'].includes(row.platform_type)) {
          throw new Error(`ç¬¬${i+1}è¡Œ: platform_typeå¿…é¡»æ˜¯blog, directory, content, commentæˆ–socialä¹‹ä¸€`);
        }
        if (row.access_type && !['guest', 'premium'].includes(row.access_type)) {
          throw new Error(`ç¬¬${i+1}è¡Œ: access_typeå¿…é¡»æ˜¯guestæˆ–premium`);
        }
        
        data.push(row);
      }
      
      return data;
    }
    
    async function uploadCSVData() {
      if (!selectedFile) return;
      
