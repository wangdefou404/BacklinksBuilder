  // Batch operation functions
  function batchSuspend() {
    const selectedUsers = getSelectedUsers();
    if (selectedUsers.length === 0) {
      alert('Please select users to suspend first');
      return;
    }
    if (confirm(`Are you sure you want to suspend the selected ${selectedUsers.length} users?`)) {
