---
import BaseLayout from '../../layouts/BaseLayout.astro';
import RoleGuard from '../../components/auth/RoleGuard.astro';
import QuotaDisplay from '../../components/auth/QuotaDisplay.astro';
import Footer from '../../components/global/Footer.astro';

// Get user session information
const session = Astro.locals.session;
const user = Astro.locals.user;

// If user is not logged in, redirect to login page
if (!session || !user) {
  return Astro.redirect('/login?redirect=/admin/dashboard');
}

const userId = user.id;
const userEmail = user.email;

// Get user role information
let userRole = null;
let roleError = null;

try {
  const response = await fetch(`${Astro.url.origin}/api/auth/get-user-role`, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify({ userId })
  });

  if (response.ok) {
    const result = await response.json();
    userRole = result;
  } else {
    const error = await response.json();
    roleError = error.error;
  }
} catch (error) {
  roleError = 'Network error';
  console.error('Role fetch error:', error);
}

// Get system statistics data
let systemStats = {
  totalUsers: 0,
  freeUsers: 0,
  regularUsers: 0,
  proUsers: 0,
  adminUsers: 0
};

try {
  const statsResponse = await fetch(`${Astro.url.origin}/api/admin/stats`, {
    method: 'GET',
    headers: {
      'Content-Type': 'application/json',
    }
  });

  if (statsResponse.ok) {
    systemStats = await statsResponse.json();
  }
} catch (error) {
  console.error('Stats fetch error:', error);
}
---

<BaseLayout title="Admin Panel - BacklinksBuilder">
  
  <div class="bg-gradient-to-br from-purple-50 to-indigo-100 pt-8 pb-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Page Title -->
      <div class="mb-8">
        <div class="flex items-center">
          <svg class="w-8 h-8 text-purple-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
          </svg>
          <div>
            <h1 class="text-3xl font-bold text-gray-900">Admin Panel</h1>
            <p class="mt-2 text-gray-600">System Management and Monitoring Center</p>
          </div>
        </div>
      </div>

      <!-- Role Guard: Ensure only admins or super users can access -->
      <RoleGuard allowedRoles={['admin', 'super']} userId={userId}>
        
        <!-- Admin Welcome Banner -->
        <div class="bg-gradient-to-r from-purple-600 to-indigo-600 rounded-lg shadow-lg mb-6 text-white">
          <div class="px-6 py-8">
            <div class="flex items-center justify-between">
              <div>
                <h2 class="text-2xl font-bold mb-2">Welcome, System Administrator!</h2>
                <p class="text-purple-100">You have full system management privileges</p>
              </div>
              <div class="hidden md:block">
                <svg class="w-16 h-16 text-purple-200" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
              </div>
            </div>
          </div>
        </div>

        <!-- System Statistics Overview -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6 mb-8">
          <!-- Total Users -->
          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center">
              <div class="p-3 rounded-full bg-indigo-100 text-indigo-600">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-gray-600">Total Users</p>
                <p class="text-2xl font-semibold text-gray-900">{systemStats.totalUsers}</p>
              </div>
            </div>
          </div>

          <!-- Free Users -->
          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center">
              <div class="p-3 rounded-full bg-gray-100 text-gray-600">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-gray-600">Free Users</p>
                <p class="text-2xl font-semibold text-gray-900">{systemStats.freeUsers}</p>
              </div>
            </div>
          </div>

          <!-- Regular Users -->
          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center">
              <div class="p-3 rounded-full bg-blue-100 text-blue-600">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                </svg>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-gray-600">Regular Users</p>
                <p class="text-2xl font-semibold text-gray-900">{systemStats.regularUsers}</p>
              </div>
            </div>
          </div>

          <!-- Pro Users -->
          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center">
              <div class="p-3 rounded-full bg-green-100 text-green-600">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
                </svg>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-gray-600">Pro Users</p>
                <p class="text-2xl font-semibold text-gray-900">{systemStats.proUsers}</p>
              </div>
            </div>
          </div>

          <!-- Admin Users -->
          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center">
              <div class="p-3 rounded-full bg-purple-100 text-purple-600">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-gray-600">Admin Users</p>
                <p class="text-2xl font-semibold text-gray-900">{systemStats.adminUsers}</p>
              </div>
            </div>
          </div>
        </div>



        <!-- Core Management Functions -->
        <div class="bg-white shadow-lg rounded-lg mb-6">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-medium text-gray-900">Core Management</h2>
            <p class="text-sm text-gray-600">Essential system management functions</p>
          </div>
          <div class="px-6 py-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              
              <!-- User Management -->
              <div class="border border-blue-200 rounded-lg p-6 hover:shadow-lg transition-all bg-gradient-to-br from-blue-50 to-blue-100">
                <div class="flex items-center mb-4">
                  <svg class="w-8 h-8 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                  </svg>
                  <div>
                    <h3 class="text-lg font-semibold text-gray-900">User Management</h3>
                    <span class="inline-flex px-2 py-1 text-xs font-medium rounded bg-blue-200 text-blue-800">Core</span>
                  </div>
                </div>
                <p class="text-gray-600 mb-4">管理用户账户、等级权限和产品额度使用情况</p>
                <a href="/admin/users" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 transition-colors">
                  用户管理
                </a>
              </div>

              <!-- Backlinks Management -->
              <div class="border border-teal-200 rounded-lg p-6 hover:shadow-lg transition-all bg-gradient-to-br from-teal-50 to-teal-100">
                <div class="flex items-center mb-4">
                  <svg class="w-8 h-8 text-teal-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                  </svg>
                  <div>
                    <h3 class="text-lg font-semibold text-gray-900">Backlinks Management</h3>
                    <span class="inline-flex px-2 py-1 text-xs font-medium rounded bg-teal-200 text-teal-800">Core</span>
                  </div>
                </div>
                <p class="text-gray-600 mb-4">管理反向链接资源、DR评级和访问权限，支持CSV批量上传</p>
                <a href="/admin/backlinks" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-teal-600 hover:bg-teal-700 transition-colors">
                  链接管理
                </a>
              </div>
            </div>
          </div>
        </div>



      </RoleGuard>
    </div>
  </div>

</BaseLayout>

<style>
  .transition-all {
    transition: all 0.3s ease-in-out;
  }
  
  .transition-colors {
    transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out;
  }
  
