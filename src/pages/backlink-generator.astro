---
import BaseLayout from '../layouts/BaseLayout.astro';
import ToolPageLayout from '../components/tools/ToolPageLayout.astro';
import DomainInput from '../components/tools/DomainInput.astro';
import ActionButtons from '../components/tools/ActionButtons.astro';
import ProgressBar from '../components/tools/ProgressBar.astro';
import ResultsTable from '../components/tools/ResultsTable.astro';
// import FeaturesList from '../components/tools/FeaturesList.astro'; // Unused import

const tableColumns = [
  { key: 'id', label: 'No.', sortable: false },
  { key: 'urlFrom', label: 'URL From', sortable: true },
  { key: 'domainRating', label: 'Domain Rating', sortable: true },
  { key: 'status', label: 'STATUS', sortable: false }
];

const features = [
  {
    icon: 'M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1',
    title: 'Advanced Backlink Generator Features',
    description: 'Our backlink generator provides comprehensive competitor backlink analysis to discover high-quality backlink opportunities for your SEO strategy',
    iconColor: 'blue'
  },
  {
    icon: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z',
    title: 'Backlink Generator Quality Analysis',
    description: 'The backlink generator delivers detailed insights about backlink quality, domain authority, and link value to enhance your backlink strategy',
    iconColor: 'green'
  },
  {
    icon: 'M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z',
    title: 'Backlink Generator Export Features',
    description: 'Export backlink generator results to CSV or JSON format for comprehensive backlink analysis and strategic campaign planning',
        iconColor: 'purple'
  }
];
---

<BaseLayout title="Backlink Generator - Free Backlink Analysis Tool | BacklinksBuilder">
  <ToolPageLayout 
    title="Backlink Generator - Analyze Competitor Backlinks"
    description="Use our powerful Backlink Generator to discover competitor backlinks and analyze backlink opportunities. This free backlink generator helps you find high-quality backlink prospects and build effective SEO strategies."
    features={features}
  >
    <Fragment slot="tool-content">
      <!-- Quota Display -->
      <div id="quota-display" class="mb-6 p-4 bg-blue-50 border border-blue-200 rounded-lg">
        <div class="flex items-center justify-between">
          <div>
<h3 class="text-sm font-medium text-blue-900">Backlink Generator Quota - Analyze Backlink Data</h3>
            <p id="quota-info" class="text-sm text-blue-700">Loading quota information...</p>
          </div>
          <div id="quota-upgrade" class="hidden">
            <a href="/pricing" class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
              Upgrade Plan
            </a>
          </div>
        </div>
      </div>
      
      <DomainInput 
        id="url"
        label="Target Keywords"
        placeholder="Enter target keywords\nExample:\nSEO tools"
        maxDomains={1}
      />
      
      <ActionButtons 
        checkButtonText="Generate Opportunities"
        checkButtonId="check-btn"
        clearButtonId="clear-btn"
        showExportButton={false}
      />
      
      <ProgressBar />
    </Fragment>
    
    <Fragment slot="results">
      <ResultsTable 
        title="Backlink Analysis Results"
        columns={tableColumns}
        containerId="results-section"
        tableId="results-table"
        tbodyId="results-table-body"
      />
    </Fragment>

    

  </ToolPageLayout>
</BaseLayout>

<script src="/js/quota-manager.js" is:inline></script>
<script src="/js/backlink-generator.js" is:inline></script>

<script is:inline>
  // Initialize quota display when page loads
  document.addEventListener('DOMContentLoaded', function() {
    if (typeof QuotaManager !== 'undefined') {
      const quotaManager = new QuotaManager();
      quotaManager.initPageQuota('backlink_check');
    }
  });
</script>

<style>
  .sort-asc svg {
    transform: rotate(0deg);
  }
  .sort-desc svg {
    transform: rotate(180deg);
  }
</style>