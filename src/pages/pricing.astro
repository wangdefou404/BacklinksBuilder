---
import BaseLayout from '../layouts/BaseLayout.astro';
import PricingComponent from '../components/landing/Pricing.astro';
---

<BaseLayout title="Pricing Plans - BacklinksBuilder">
  <Fragment slot="head">
    <title>Pricing Plans - BacklinksBuilder</title>
    <meta name="description" content="Choose the right BacklinksBuilder pricing plan for you, from free to professional versions">
  </Fragment>
  <main class="min-h-screen bg-white">
    <!-- Header -->
    <div class="bg-white shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-6">
          <div class="flex items-center">
            <h1 class="text-2xl font-bold text-gray-900">BacklinksBuilder</h1>
          </div>
          <nav class="flex space-x-8">
            <a href="/" class="text-gray-500 hover:text-gray-900">Home</a>
            <a href="/pricing" class="text-blue-600 font-medium">Pricing</a>
            <a href="/auth/login" class="text-gray-500 hover:text-gray-900">Login</a>
          </nav>
        </div>
      </div>
    </div>

    <!-- Use homepage Pricing component -->
    <PricingComponent />
  </main>
</BaseLayout>